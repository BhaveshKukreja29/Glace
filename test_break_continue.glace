// GLACE-003: Simple test for break and continue
// This matches the acceptance test criteria

print("Testing break and continue...")

mut sum = 0

// CHANGE: Loop from 0 to 10 with break and continue
loop i in 0..10 {
    // CHANGE: Break when i equals 5
    if i == 5 { break }
    // CHANGE: Continue (skip) when i is even
    if i % 2 == 0 { continue }
    sum = sum + i
}

print("Result: " + str(sum))
assert(sum == 4)  // Sum should be 1 + 3 = 4

print("Test passed!")
